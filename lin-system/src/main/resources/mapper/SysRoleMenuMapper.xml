<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.system.dao.SysRoleMenuDao">

    <resultMap type="com.lin.system.pojo.SysRoleMenu" id="SysRoleMenuResult">
        <result property="roleId"    column="role_id"    />
        <result property="menuId"    column="menu_id"    />
        <result property="id"    column="id"    />
    </resultMap>


    <sql id="selectSysRoleMenuVo">
        select role_id, menu_id, id from sys_role_menu
    </sql>

    <select id="list" parameterType="com.lin.system.pojo.SysRoleMenu" resultMap="SysRoleMenuResult">
        <include refid="selectSysRoleMenuVo"/>
    </select>


    <select id="query" resultMap="SysRoleMenuResult">
        <include refid="selectSysRoleMenuVo"/> where id = #{id}
    </select>

    <insert id="add" parameterType="com.lin.system.pojo.SysRoleMenu">
        insert into sys_role_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roleId != null">role_id,</if>
            <if test="menuId != null">menu_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roleId != null">#{roleId},</if>
            <if test="menuId != null">#{menuId},</if>
         </trim>
    </insert>

    <update id="edit" parameterType="com.lin.system.pojo.SysRoleMenu">
        update sys_role_menu
        <trim prefix="SET" suffixOverrides=",">
            <if test="roleId != null">role_id = #{roleId},</if>
            <if test="menuId != null">menu_id = #{menuId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from sys_role_menu where id = #{id}
    </delete>

    <select id="gettree" resultType="Long">
          select menu_id from sys_role_menu where role_id = #{id}
    </select>

    <delete id="deleteByRid">
      delete from sys_role_menu where role_id = #{id}
    </delete>

</mapper>
